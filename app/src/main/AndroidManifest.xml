<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.WorkPulseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkPulse">

        <!-- Welcome Screen -->
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.WorkPulse.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin Activities -->
        <activity android:name=".activities.AdminLoginActivity" />
        <activity android:name=".activities.CreateAccountActivity" />
        <activity android:name=".activities.CreateTaskActivity" />
        <activity android:name=".activities.AdminDashboardActivity" />
        <activity android:name=".activities.EmployeeHubActivity" />
        <activity android:name=".activities.AddEmployeeActivity" />
        <activity android:name=".activities.PerformanceReviewActivity" />
        <activity android:name=".activities.SelectEmployeeForReviewActivity" />
        <activity android:name=".activities.SubmittedReviewsActivity" />
        <activity android:name=".activities.WriteReviewActivity" />
        <activity android:name=".activities.ReviewDetailsActivity" />
        <activity android:name=".activities.WorkloadTasksActivity" />
        <activity android:name=".activities.AttendanceCenterActivity" />
        <activity android:name=".activities.DeptAnalyticsActivity" />
        <activity android:name=".activities.AlertsNoticesActivity" />
        <activity android:name=".activities.CreateAnnouncementActivity" />

        <!-- Employee Activities -->
        <activity android:name=".activities.EmployeeLoginActivity" />
        <activity android:name=".activities.EmployeeDashboardActivity" />
        <activity android:name=".activities.MyPerformanceActivity" />
        <activity android:name=".activities.MyTasksActivity" />
        <activity android:name=".activities.AttendanceLeaveActivity" />
        <activity android:name=".activities.ApplyLeaveActivity" />
        <activity android:name=".activities.MyProfileActivity" />
        <activity android:name=".activities.EditProfileActivity" />
        <activity android:name=".activities.NotificationsActivity" />
        <activity android:name=".activities.ReportsActivity" />

    </application>

</manifest>
