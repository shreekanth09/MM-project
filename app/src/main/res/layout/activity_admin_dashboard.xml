<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <!-- Header Section -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ivNotifications"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/glass_white_10"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/glass_white_20"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_popup_reminder"
                app:tint="@color/neon_cyan" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-black"
            android:text="ADMIN PANEL"
            android:letterSpacing="0.2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ivProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/glass_white_10"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/glass_white_20"
            app:strokeWidth="1dp"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_myplaces"
                app:tint="@color/neon_purple" />
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="30dp">

            <!-- Overview Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="SYSTEM OVERVIEW"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:fontFamily="sans-serif-black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cardTotalEmployeesContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_neon_card_cyan"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMPLOYEES"
                        android:textColor="@color/neon_cyan"
                        android:textSize="10sp"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-black" />
                    <TextView
                        android:id="@+id/tvTotalEmployeesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_neon_card_purple"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AVG SCORE"
                        android:textColor="@color/neon_purple"
                        android:textSize="10sp"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="4.2"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_neon_card_rose"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEAVES"
                        android:textColor="@color/neon_rose"
                        android:textSize="10sp"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-black" />
                    <TextView
                        android:id="@+id/tvPendingLeaveValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="--"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:fontFamily="sans-serif-black" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="12dp"
                android:text="MANAGEMENT HUB"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:fontFamily="sans-serif-black" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Employee Directory -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEmployeeHub"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/neon_purple" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Employee Directory"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Add New Employee -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnAddEmployee"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_input_add"
                            app:tint="@color/neon_cyan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Add New Employee"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Performance Management -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPerformanceReview"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_report_image"
                            app:tint="@color/neon_rose" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Performance"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Task Manager -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardWorkloadTasks"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="@color/neon_cyan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Task Manager"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Attendance & Leave -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAttendanceCenter"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_today"
                            app:tint="@color/neon_purple" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Attendance &amp; Leave"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Announcements -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAlertsNotices"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_dialog_info"
                            app:tint="@color/neon_cyan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Announcements"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reports & Insights -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDeptAnalytics"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            app:tint="@color/neon_rose" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Reports &amp; Insights"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Settings / Logout -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ivLogout"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/glass_white_10"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/glass_white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_lock_power_off"
                            app:tint="@color/neon_cyan" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Logout"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
